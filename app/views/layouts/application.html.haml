!!!
%html
  %head
    %title Redpanel
    %link{:rel=>"shortcut icon", :href=>"/favicon.png"}
    =stylesheet_link_tag :all
    =javascript_include_tag :defaults
    =csrf_meta_tag
  %body
    =render :partial => '/shared/main_menu'

    #blackpanel
      .part
        =image_tag 'logo.png', :id => 'logo'
      .part
        %p#admin-of Administration of:
        %p#the-server=request.server_name
      -if user_signed_in?
        .last.part
          %p Identified as:
          %p#identity
            <!-- =image_tag "", :width=>"32", :height=>"32", :alt=>""-->
            %span.username=current_user.email

    #container
      = yield
